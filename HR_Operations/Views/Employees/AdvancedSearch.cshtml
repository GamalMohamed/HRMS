@model CoEX_HRMS.ViewModels.AutoCompleteViewModel
@{
    ViewBag.Title = "Employees Search";
}
<h1 class="page-title font-blue bold uppercase">
    <i class="fa fa-search"></i>
    Employees Search
</h1>
<p>
    @Html.ActionLink("Go to resigned search", "ResignedSearch", null, new { @class = "btn blue" })
</p>
<hr />

@using (@Html.BeginForm("AdvancedSearchResult", "Employees", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="fa fa-user"></i>
                        <span class="caption-subject bold uppercase">Personal</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.Gender, new { @class = "bold" })<br />
                            @Html.RadioButtonFor(model => model.SearchFormViewModel.Gender, "Male") Male &nbsp;
                            @Html.RadioButtonFor(model => model.SearchFormViewModel.Gender, "Female") Female
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.MajorUniversity, new { @class = "bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.MajorUniversity, new SelectList(@Model.MajorUniversitiesList, "Optional-Select"), new { @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.GraduationYear, new { @class = "bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.GraduationYear, new SelectList(@Model.GraduationyearsList, "Optional-Select"), new { @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.StartingBirthDate, new { @class = "bold" })
                            @Html.TextBoxFor(model => model.SearchFormViewModel.StartingBirthDate, new { @class = "form-control", placeholder="mm/dd/yyyy"})
                            @Html.ValidationMessageFor(model => model.SearchFormViewModel.StartingBirthDate, "", new { @class = "text-danger" })
                        </div>
                        <b>to</b>
                        <br />
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.EndingBirthDate, new { @class = "bold" })
                            @Html.TextBoxFor(model => model.SearchFormViewModel.EndingBirthDate, new { @class = "form-control", placeholder = "mm/dd/yyyy" })
                            @Html.ValidationMessageFor(model => model.SearchFormViewModel.EndingBirthDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-blue-dark ">
                        <i class="fa fa-cogs"></i>
                        <span class="caption-subject bold uppercase">Technical</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.Label("Workload", htmlAttributes: new { @class = "control-label bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.WorkloadId, ViewBag.WorkloadsList as SelectList, new { @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })
                        </div>

                        <div class="form-group">
                            @Html.Label("Role", htmlAttributes: new { @class = "control-label bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.RoleId, ViewBag.RolesList as SelectList, new { @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.Vendor, new { @class = "bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.Vendor, new SelectList(@Model.VendorsList, "Optional-Select"), new { @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.BasedOut, new { @class = "bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.BasedOut, new SelectList(@Model.BasedOutList, "Optional-Select"), new { @tabindex = "-1", @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.Subsidiary, new { @class = "bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.Subsidiary, new SelectList(@Model.SubsidaryList, "Optional-Select"), new { @tabindex = "-1", @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.SearchFormViewModel.ReportingManager, new { @class = "bold" })
                            @Html.ListBoxFor(e => e.SearchFormViewModel.ReportingManager, new SelectList(@Model.ReportingMangersList, "Optional-Select"), new { @tabindex = "-1", @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })

                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-4">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-green-haze ">
                        <i class="fa fa-hand-grab-o"></i>
                        <span class="caption-subject bold uppercase">Info</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="form-group">
                                @Html.LabelFor(e => e.SearchFormViewModel.ExperienceYears, new { @class = "bold" })
                                @Html.ListBoxFor(e => e.SearchFormViewModel.ExperienceYears, new SelectList(@Model.ExperiencesList, "Optional-Select"), new { @tabindex = "-1", @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(e => e.SearchFormViewModel.PreviousEmployer, new { @class = "bold" })
                                @Html.ListBoxFor(e => e.SearchFormViewModel.PreviousEmployer, new SelectList(@Model.PreviousEmployersList, "Optional-Select"), new { @tabindex = "-1", @class = "form-control select2-multiple select2-hidden-accessible", @multiple = "" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(e => e.SearchFormViewModel.StartingHiringDate, new { @class = "bold" })
                                @Html.TextBoxFor(model => model.SearchFormViewModel.StartingHiringDate, new { @class = "form-control", placeholder = "mm/dd/yyyy" })
                                @Html.ValidationMessageFor(model => model.SearchFormViewModel.StartingHiringDate, "", new { @class = "text-danger", placeholder = "mm/dd/yyyy" })
                            </div>
                            <b>to</b>
                            <br />
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(e => e.SearchFormViewModel.EndingHiringDate, new { @class = "bold" })
                                @Html.TextBoxFor(model => model.SearchFormViewModel.EndingHiringDate, new { @class = "form-control", placeholder = "mm/dd/yyyy" })
                                @Html.ValidationMessageFor(model => model.SearchFormViewModel.EndingHiringDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" value="Search" class="btn btn-primary mt-ladda-btn ladda-button" data-style="expand-right">
                        <i class="fa fa-search-plus"></i>
                        <span class="ladda-label">Search</span>
                        <span class="ladda-spinner"></span><div class="ladda-progress" style="width: 0px;"></div>
                    </button>
                </div>
            </div>
        </div>
    </div>
}



@section scripts
{
    @Scripts.Render("~/bundles/multiple-select-autocomplete")
    <script src="~/assets/pages/scripts/ui-buttons-spinners.min.js" type="text/javascript"></script>
}

@section styles{
    @Styles.Render("~/Content/multiple-select-autocomplete")
    <link href="~/assets/global/plugins/ladda/ladda-themeless.min.css" rel="stylesheet" type="text/css" />
}

@section plugins{
    @Scripts.Render("~/bundles/spinner-button-plugins")
}
