@model IEnumerable<CoEX_HRMS.Models.Employee>

@{
    ViewBag.Title = "Employees";
}


@if ((ViewBag.Access == "FullAccess"))
{
    <div class="portlet">
        <div class="portlet-body">
            <button type="button" class="btn btn-primary mt-ladda-btn ladda-button" data-style="expand-right"
                    onclick="location.href='@Url.Action("Create")'">
                <span class="ladda-label">
                    <i class="fa fa-plus-circle"></i> New Employee
                </span>
                <span class="ladda-spinner"></span>
            </button>
            &nbsp;
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ImportEmployees")'">
                <i class="fa fa-upload"></i> Import from CSV
            </button>
        </div>
    </div>
}
@if (!Model.Any())
{
    <p> No active employees found..</p>
}
else
{
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-dark">
                <i class="icon-settings font-dark"></i>
                <span class="caption-subject bold uppercase"> Employees</span>
            </div>
            <div class="tools"> </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="sample_1">
                <thead>
                    <tr>
                        <th>
                            <i class="fa fa-user"></i>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            <i class="fa fa-inbox"></i>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            <i class="fa fa-phone"></i>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            <i class="fa fa-suitcase"></i>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th>
                            <i class="fa fa-object-group"></i>
                            @Html.DisplayNameFor(model => model.Workload)
                        </th>
                        <th>
                            <i class="fa fa-map"></i>
                            @Html.DisplayNameFor(model => model.Subsidiary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HiringDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Vendor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BasedOut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReportingManager)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GraduationYear)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExperienceYears)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MajorUniversity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PreviousEmployer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccessLevel)
                        </th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Workload.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subsidiary)
                        </td>
                        <td>
                            @if (item.HiringDate.HasValue)
                                {
                                @item.HiringDate.Value.ToShortDateString()
                                }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasedOut)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportingManager)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @if (item.BirthDate.HasValue)
                                {
                                @item.BirthDate.Value.ToShortDateString()
                                }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GraduationYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExperienceYears)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MajorUniversity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PreviousEmployer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccessLevel)
                        </td>
                        <td>
                            @if (ViewBag.Access == "FullAccess")
                                {
                                <a class="btn btn-outline btn-circle btn-sm purple" href="@("/Employees/Edit/"+item.Id.ToString())">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-outline btn-circle dark btn-sm black" href="@("/Employees/Delete/"+item.Id.ToString())"
                                   onclick="return confirm('Are you sure you want to delete this employee?');">
                                    <i class="fa fa-trash-o"></i> Delete
                                </a>
                                }
                            <a class="btn btn-outline btn-circle btn-sm blue-chambray" href="@("/Profile/Details/"+item.Id.ToString())">
                                <i class="fa fa-user"></i> Profile
                            </a>
                            <a class="btn btn-outline btn-circle btn-sm blue-sharp" href="@("/Employees/Details/"+item.Id.ToString())">
                                <i class="fa fa-list"></i> More Details
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}



@section Scripts
{
    <script src="~/assets/pages/scripts/ui-buttons-spinners.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/table-datatables-buttons.min.js" type="text/javascript"></script>
}

@section styles
{
    <link href="~/assets/global/plugins/ladda/ladda-themeless.min.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/datatables-css")

}

@section plugins
{
    @Scripts.Render("~/bundles/spinner-button-plugins")
    @Scripts.Render("~/bundles/datatable-plugins")

    <script>
        $(document).ready(function () {
            if ("@TempData["SubmissionStatus"]" === "Success") {
                toastr.success("@TempData["FlashMsg"]");
            }
        });
    </script>
}
