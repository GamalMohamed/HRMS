@model IEnumerable<CoEX_HRMS.Models.Employee>
@{
    ViewBag.Title = "Employees Search Results";
}

@if (!Model.Any())
{
    <p>No results found..</p>
}
else
{
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-dark">
                <i class="fa fa-user font-dark"></i>
                <span class="caption-subject bold uppercase"> Employees Search Results</span>
            </div>
            <div class="tools"> </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="sample_1">
                <thead>
                    <tr>
                        <th>
                            <i class="fa fa-user"></i>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <td>
                            <i class="fa fa-inbox"></i>
                            @Html.DisplayNameFor(model => model.Email)
                        </td>
                        <td>
                            <i class="fa fa-phone"></i>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </td>
                        <td>
                            <i class="fa fa-suitcase"></i>
                            @Html.DisplayNameFor(model => model.Role)
                        </td>
                        <td>
                            <i class="fa fa-object-group"></i>
                            @Html.DisplayNameFor(model => model.Workload)
                        </td>
                        <td>
                            <i class="fa fa-map"></i>
                            @Html.DisplayNameFor(model => model.Subsidiary)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.HiringDate)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.Vendor)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.BasedOut)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.ReportingManager)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.GraduationYear)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.ExperienceYears)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.MajorUniversity)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.PreviousEmployer)
                        </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Workload.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subsidiary)
                            </td>
                            <td>
                                @if (item.HiringDate.HasValue)
                                {
                                    @item.HiringDate.Value.ToShortDateString()
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vendor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BasedOut)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReportingManager)
                            </td>
                            <td>
                                @if (item.BirthDate.HasValue)
                                {
                                    @item.BirthDate.Value.ToShortDateString()
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GraduationYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExperienceYears)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MajorUniversity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviousEmployer)
                            </td>
                            <td>
                                <a class="btn btn-outline btn-circle btn-sm purple" onclick="location.href = '@Url.Action("Edit", "Employees", new {id = item.Id})'">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-outline btn-circle dark btn-sm black" onclick="location.href = '@Url.Action("Delete", "Employees", new {id = item.Id})'">
                                    <i class="fa fa-trash-o"></i> Delete
                                </a>
                                <a class="btn btn-outline btn-circle btn-sm blue-chambray" onclick="location.href = '@Url.Action("Details", "Profile", new {id = item.Id})'">
                                    <i class="fa fa-user"></i> Profile
                                </a>
                                <a class="btn btn-outline btn-circle btn-sm blue-sharp" onclick="location.href = '@Url.Action("Details", "Employees", new {id = item.Id})'">
                                    <i class="fa fa-list"></i> More Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts
{
    <script src="~/assets/pages/scripts/table-datatables-buttons.min.js" type="text/javascript"></script>
}

@section styles
{
    @Styles.Render("~/Content/datatables-css")

}

@section plugins
{
    @Scripts.Render("~/bundles/datatable-plugins")
}

